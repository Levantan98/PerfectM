<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--giao dien chung-->
    <RelativeLayout
        android:id="@+id/layouGenaral"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--layout hien thi anh va thong tin mo rong can doc-->
        <!-- layout thong tin tren man hien thi-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:id="@+id/item_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imgavt2" />
                    <LinearLayout
                        android:id="@+id/layout_cardinfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tV_Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Hang Pham"
                            android:textSize="@dimen/_26sdp"
                            android:textStyle="bold" />
                        <!-- layout hien thi thong tin tuoi va gioi tinh-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:id="@+id/tV_City"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ha Noi"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:background="@drawable/custom_button_transperent"
                                    android:orientation="horizontal"
                                    android:weightSum="4">

                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_female" />

                                    <TextView
                                        android:id="@+id/tV_Age"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="2"
                                        android:text="19"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <!-- layout infor extends-->
                <LinearLayout
                    android:id="@+id/layout_catchmeet_extend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">

                        <TextView
                            android:id="@+id/tV_exName"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_50sdp"
                            android:gravity="center_vertical"
                            android:text="Mai Hang"
                            android:textSize="@dimen/_24sdp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/custom_buttom_share">

                            <ImageView
                                android:id="@+id/image_ex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/white"
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:src="@drawable/ic_loupe_24" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tV_exCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pham Van Dong"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:background="@drawable/custom_button_transperent"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:scaleX="0.8"
                                android:scaleY="0.8"
                                android:src="@drawable/ic_female" />

                            <TextView
                                android:id="@+id/tV_exAge"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                android:text="19"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--layout include -->
                    <include
                        android:id="@+id/layout_extend2"
                        layout="@layout/extend_info_layout"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!--  layout troi noi-->
        <LinearLayout
            android:id="@+id/layouttroinoi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/ic_exit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_thoat" />

            <ImageView
                android:id="@+id/heart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/ic_heart" />

            <ImageView
                android:id="@+id/heatShot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_heart_narrow" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/left_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_black">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_80sdp"
            android:src="@drawable/icon_thoat" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_black">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_80sdp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/ic_heart" />
    </FrameLayout>
</androidx.cardview.widget.CardView>